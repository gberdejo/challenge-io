{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/",
  "monorepo": true,
  "root": "apps/issuer-api",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/issuer-api/tsconfig.app.json"
  },
  "projects": {
    "issuer-api": {
      "type": "application",
      "root": "apps/issuer-api",
      "entryFile": "main",
      "sourceRoot": "apps/issuer-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/issuer-api/tsconfig.app.json"
      }
    },
    "card-processor": {
      "type": "application",
      "root": "apps/card-processor",
      "entryFile": "main",
      "sourceRoot": "apps/card-processor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/card-processor/tsconfig.app.json"
      }
    }
  }
}
